{
  "name": "internal-tool-ui-registry",
  "version": "0.1.0",
  "description": "Internal lightweight UI registry for company tools based on shadcn/ui",
  "type": "module",
  "author": "Paula Meng",
  "license": "MIT",
  "scripts": {
    "build": "tsx scripts/build.ts",
    "validate": "tsx scripts/build.ts --validate",
    "validate:json": "node scripts/validate-json.js",
    "docs:dev": "cd apps/docs && npm run dev",
    "docs:build": "cd apps/docs && npm run build",
    "docs:start": "cd apps/docs && npm start",
    "serve": "node scripts/serve-registry.js",
    "serve:registry": "node scripts/serve-registry.js 3002",
    "add:component": "node scripts/add-component.js",
    "registry:build": "shadcn build"
  },
  "devDependencies": {
    "@mdx-js/loader": "^3.1.1",
    "@mdx-js/react": "^3.1.1",
    "@next/mdx": "^16.0.4",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.22",
    "next": "^16.0.4",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "shadcn",
    "ui",
    "registry",
    "components"
  ]
}
